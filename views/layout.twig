                <!-- When your logged -->
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="account.php">Mon compte</a></li>
                    <li><a href="logout.php">Se déconnecter</a></li>
                </ul>
                <p class="navbar-text navbar-right">Connecté en tant que {{ SESSION['email'] }}</p>
