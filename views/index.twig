{% extends "layout.twig" %}

{% block title %}Liste des termes{% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <div class="page-header">
                    <h1>Liste des termes</h1>
                </div>

                {% for concept in concepts %}
                    <div class="panel panel-default">
                        <div class="panel-heading concept">
                            <i class="glyphicon glyphicon-chevron-right"></i> {{concept.nom}}
                            <span class="badge">{{concept.termes|length}}</span>
                            <a href="#{{concept.link}}">Edit</a>
                        </div>
                        <ul class="list-group terme">
                            {% for terme in concept.termes %}
                                <li class="list-group-item">{{terme.nom}}
                                    <a href="#{{terme.link}}">Edit</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
